<section class="candidates-resume-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="candidates-resume-content">
                    <%= form_with model: @lead do |f| %>
                        <% if @lead.errors.any? %>
                            <div class="alert alert-danger">
                                <ul>
                                    <% @lead.errors.full_messages.each do |msg| %>
                                        <li><%= msg %></li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label class="required">Name</label>
                                    <%= f.text_field :name, class: "form-control"%>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-2">
                                <div class="form-group">
                                    <label>Skill</label>
                                    <div id="profile">
                                         <div class="custom_checkbox mt-15" id="refresh_primary">
                                           <%= render 'layouts/skill_type', f: f%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label class="required">Assigned To</label>
                                    <div id="assigned_to">
                                        <%= f.select :assigned_to, @hr_list.collect {|p| [ p.name, p.email ] }, {include_blank: 'Select'}, class: "js-example-basic-single form-control select1 sel-search" %>
                                    </div>  
                                </div>
                            </div>
                        
                            <div class="col-lg-6 col-md-2">
                                <div class="form-group test">
                                    <label>Additional Info</label>
                                    <%= f.text_area :additional_info, class: "form-control", size: "10x5"%>
                                </div>
                            </div>
                            <div>
                                <div class="form-group test">
                                    <%= f.file_field :file, id: "img" %>
                                </div>
                            </div>
                        
                            <div class="col-lg-12">
                                <%= f.submit "Save", class: " btn default-btn" %>
                            </div>

                        </div>
                    <% end %>  
                </div>
            </div>
        </div>
    </div>
</section>
<style>
.test{
    margin-top: 30px;
}
#primary_skill button{
    overflow: hidden;
    text-overflow: ellipsis;
}
</style>