<%=  render "login_header" %>
<%= stylesheet_link_tag "style.css", "data-turbo-track": "reload" %>
    <section class="user-area ptb-100">
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6">
            <div class="user-form-content log-in-50 pt-4">
              <h3>Log In to Your Account</h3>
			      <div class="user-form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <label>Email</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
                    </div>
                  </div>

                  <div class="col-12">
                    <div class="form-group">
                      <label>Password</label>
                      <%= f.password_field :password, autocomplete: "current-password" , class: "form-control" %>
                    </div>
                      <% if flash.alert %>
                      <div id="error_explanation">
                      <%= flash.alert %>
                      </div>
                      <% end %>
                  </div>

				  <% if devise_mapping.rememberable? %>
					<div class="col-12">
						<div class="login-action">
							<span class="log-rem">
								<%= f.check_box :remember_me, id: "remember-2" %>
									<label>Keep me logged in</label>
							</span>
					<% end %>                    
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                          <span class="forgot-login">
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                          </span>
                        </div>
                      </div>
                    <% end %>

                    <div class="col-12">
                      <%= f.submit "Log in" , class: "btn default-btn" %>
                    </div>
                </div>
				<% end %>
              </div>
            </div>
          </div>

          <div class="col-lg-3">
          </div>

        </div>
      </div>
    </section>


    <style>
    #error_explanation{
      color: red;
    }
    </style>

