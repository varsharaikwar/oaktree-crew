                <div class="row">
                    <div class="col-lg-10 m-auto" id="candidate_ref">
<div class="row">
    <div class="col-lg-12 pt-4">
        <h3><%= @candidate.count %> Candidates</h3><br>
            <ul class="d-flex flex-wrap badge-list mb-0">
                <% for i in Candidate::CATEGORY_LIST %> 
                <%= link_to i, skill_candidates_path(i.split.join("-")), class: "sub-title",  target: '_blank' %> 
                <% end %>
            </ul>
    </div>  
    <% @candidate.each do |candidate| %>
        <div class="col-lg-4 text-center card-box mb-4">
            <div class="widget-box">
                <div class="dropdown float-right">
                    <a href="javascript:void" class="float-right" id="dropdownMenuButton" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <i class="bx bx-dots-vertical float-right"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <% if current_user.has_role? :bde %>
                            <div class="d-flex">
                            <i class="fa fa-eye ml-2"></i>
                            <%= link_to 'View Candidate', candidate_path(candidate) , class: "dropdown-item"  %> 
                            </div>
                        <% else %>
                        <div class="d-flex align-items-center">
                        <i class="fa fa-eye ml-2"></i>
                        <%= link_to 'View Candidate', candidate_path(candidate) , class: "dropdown-item"  %>
                        </div>

                        <div class="d-flex align-items-center">
                        <i class="fa fa-edit ml-2"></i>
                        <%= link_to 'Edit Candidate', edit_candidate_path(candidate), class: "dropdown-item" %> 
                        </div>
                            
                        <% end %>                                
                    </div>
                </div>
                <% if candidate.image.present? %>
                    <span class="emoji-container emoji1">
                        <%= image_tag candidate.image.url %>
                    </span>
                <% else %>
                    <% if candidate.gender == "Male" %>
                        <span class="emoji-container emoji3">
                            <img src="https://cdn-icons-png.flaticon.com/512/921/921097.png"
                                alt="">
                        </span>
                    <% elsif candidate.gender == "Female" %>
                        <span class="emoji-container emoji2">
                            <img src="https://cdn-icons-png.flaticon.com/512/2922/2922566.png"
                                alt="">
                        </span>
                    <% else %>
                        <span class="emoji-container emoji1">
                            <img src="https://cdn-icons-png.flaticon.com/512/2922/2922506.png" alt="">
                        </span>
                    <% end %>
                <% end %>
                <p class="m-0"><b><%= link_to candidate.first_name+ " " +candidate.last_name,candidate_path(candidate.id) %></b></p>
                <p><%= candidate.category %></p>
                <p><%= candidate.status %></p> 
            </div>
        </div>
    <% end %>

</div>
</div>
</div>
 </div> 
        </section>   
    </div>
</div>

<script>

 $(document).ready(function(){
    $("#CountryFilter").niceSelect();
    $("#CategoryFilter").niceSelect();

    $("#CountryFilter , #CategoryFilter, .check_filter input").on('change', function(e){
        
        const arr = $(".check_filter").length
        level_array = []
        nature_array = []
        skill_array = []
        country_name = $("#CountryFilter")[0].value != '' ? $("#CountryFilter")[0].value : []
        category_name = $("#CategoryFilter")[0].value != '' ? $("#CategoryFilter")[0].value : []
        
        for (  i=0; i < arr; i++) {
            var inp = $(".check_filter")[i]

            for( j in inp.childNodes){
                if (inp.childNodes[j].nodeName == "INPUT" && inp.childNodes[j].checked){
                    switch (inp.classList[0]){
                        case "jobs_level":
                            level_array.push(inp.childNodes[j].defaultValue)
                        break;
                        case "jobs_nature":
                            nature_array.push(inp.childNodes[j].defaultValue)
                        break;
                        case "skill_filter":
                            skill_array.push(inp.childNodes[j].defaultValue)
                        break;
                    }
                }
            }            
        }
        
        $.ajax({
            type: "GET",
            url: "/filter/candidates",
            data: {"level_array": level_array, "nature_array": nature_array, "country_name": country_name, "category_name": category_name, "skill_array": skill_array}
        });       
    });

})
</script>
