                                                        <%= link_to "Full-Stack Developer", candidates_path(query: "Full-Stack Developer"), class:"dropdown-item"%>
                                                        <%= link_to "Mobile Developer", candidates_path(query: "Mobile Developer"), class:"dropdown-item"%>
