<%=  render "layouts/header" %> 
<div class="row">
<%=  render "filters" %> 


    <div class="col-lg-10">
        <div class="page-title-area ">
            <div class="container-fluid">
                <div class="page-title-content">
                    <div class="row">
                        <div class="col-md-12">
