<script>
    document.querySelector('table').onclick = ({
    target
    }) => {
    if (!target.classList.contains('more')) return
    document.querySelectorAll('.dropout.active').forEach(
        (d) => d !== target.parentElement && d.classList.remove('active')
    )
    target.parentElement.classList.toggle('active')
    }
</script>

<style>
    .more {
    cursor: pointer;
    border: none;
    background: transparent;
    }

    .more span {
    display: block;
    width: .25rem;
    height: .25rem;
    background: #363636;
    border-radius: 50%;
    pointer-events: none;
    }

    .more span:not(:last-child) {
    margin-bottom: .125rem;
    }

    .dropout {
    z-index: 9001;
    width: fit-content;
    position: relative;
    margin-left: auto;
    margin-right: auto;
    }

    .dropout ul {
    position: absolute;
    top: -1.1rem;
    right: 1.5rem;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.12s ease;
    }

    .dropout.active ul {
    transform: scaleX(1);
    }
</style>
