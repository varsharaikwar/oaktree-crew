            <div class="row">
                <div class="col-lg-12 pt-4">
                    <h3><%= @candidates.count %> Candidates</h3>
                </div>
                <% @candidates.each_with_index do |candidate, i| %>
                <div class="col-lg-3 text-center card-box mb-4">
                    <div class="widget-box">
                        <div class="dropdown float-right">
                            <a href="javascript:void" class="float-right" id="dropdownMenuButton" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                <i class="bx bx-dots-vertical float-right"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <%= link_to 'View', candidate_path(candidate.first_name) , class: "dropdown-item"  %>
                            <%= link_to 'Edit', edit_candidate_path(candidate), class: "dropdown-item" %>                                 
                            </div>
                        </div>
                        <%if candidate.image.url.present? %>
                                <span class="emoji-container emoji1">
                                    <%= image_tag candidate.image.url, class: "abc" %>
                                </span>
                        <% else %>
                            <% if candidate.gender == "Male" %>
                                <span class="emoji-container emoji3">
                                    <img src="https://cdn-icons-png.flaticon.com/512/921/921097.png"
                                        alt="">
                                </span>
                            <% elsif candidate.gender == "Female" %>
                                <span class="emoji-container emoji2">
                                    <img src="https://cdn-icons-png.flaticon.com/512/2922/2922506.png"
                                        alt="">
                                </span>
                            <% else %>
                                <span class="emoji-container emoji1">
                                    <img src="https://cdn-icons-png.flaticon.com/512/2922/2922566.png" alt="">
                                </span>
                            <% end %>
                        <% end %>
                        <p class="m-0"><b><%= link_to candidate.first_name+ " " +candidate.last_name,candidate_path(candidate.first_name) %></b></p>
                        <p><%= candidate.category %></p>
                        <% if current_user.has_role? :senior_hr %>
                            <td id="check<%=candidate.id%>">
                                <div class="custom-control custom-switch", id="check<%=candidate.id%>">
                                    <%= check_box_tag "status#{candidate.id}", candidate.id, checked = check(candidate.id), class: "custom-control-input", id: "customSwitch#{candidate.id}"%>   
                                    <label class="custom-control-label" for="customSwitch<%=candidate.id%>" ><%= candidate.status %></label>
                                </div>
                            </td> 
                        <% else %>
                            <td><%= candidate.status %></td>
                        <% end %> 
                    </div>
                </div>
                <% end %>
            </div>
            <!-- card ends here -->
