        $(":checkbox").click(function(e){
                var code = "";
            if (e.delegateTarget.checked == true){

                code = "Active";
            }else if (e.delegateTarget.checked == false){
                code = "Draft";}
            $.ajax({
                url: '/candidates/' + this.value + '/',
                type: 'PUT',
                data: {"status": code}
                });
        });
    });
</script>




