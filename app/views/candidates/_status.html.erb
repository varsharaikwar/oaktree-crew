<%= check_box_tag "status#{candidate.id}",candidate.id, checked = check(candidate.id), class: "form-check-input" %>
<label class="form-check-label"  ><%= candidate.status %></label> 
<script type="text/javascript"> 
    $(document).ready(function(){
    $(".candidate-check").click(function(){

    });
    $(":checkbox").click(function(e){
            var code = "";
        if (e.delegateTarget.checked == true){

            code = "Active";
        }else if (e.delegateTarget.checked == false){
            code = "Draft";}
        $.ajax({
            url: '/candidates/' + this.value + '/',
            type: 'PUT',
            data: {"status": code}
            });
    });
    });
</script>