<div class="container"> 
    <div class="p-3">
        <div class="alert alert-info">
            <% candidate = Candidate.find(@notification.candidate_id)%>
            <p><i class="fa fa-file mr-1"></i><b><a href="<%= candidate_path(candidate)%>"><%= candidate.first_name + " " + candidate.last_name  %></a> has been assigned to Lead</b></p>
            <hr>
            <p>by:- <b class="ml-2"><%= @notification.user.name %></b></p>
            <p>Lead:- <b class="ml-2"><%= @notification.lead.name %></b></p>
        </div>
    </div>
    <div class="text-right">
    <a href="/notifications" class="text-success"><i class="fa fa-long-arrow-left"></i> Back </a>
    </div>
</div>