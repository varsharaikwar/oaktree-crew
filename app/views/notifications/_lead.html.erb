<div class="container"> 
    <div class="p-3">
        <div class="alert alert-info">
            <p><i class="fa fa-address-card mr-1"></i><b>From:  <%= @notification.user.name%></b></p>
            <hr>
            <div class="row">
                <div class="col-lg-6">
                    <p>Name:- <b class="ml-2"><%= @notification.lead.name %></b></p>
                    <p>Profile:- <b class="ml-2"><%= @notification.lead.profile %></b></p>
                </div>
                <div class="col-lg-6">
                    <p>Status:- <b class="ml-2"><%= @notification.status %></b></p>
                    <p>Additional Info:- <b class="ml-2"><%= @notification.lead.additional_info%></b></p>
                </div>   
            </div>
        </div>
        <div class="text-right">
            <a href="/notifications" class="text-success"><i class="fa fa-long-arrow-left"></i> Back </a>
        </div>
    </div>
</div>