<% interview_schedule = InterviewSchedule.find_by(pool_manager_id: @notification.reciver_id, candidate_id: @notification.candidate_id, hr_id: @notification.user.id, lead_id: nil)%>
<% candidate = Candidate.find(@notification.candidate_id)%>

    <div class="container"> 
        
        <div class="p-3">

            <div class="alert alert-info">
                <p>
                  <i class="fa fa-file mr-1"></i>Interview has been scheduled for 
                  <a href="<%= candidate_path(candidate)%>"><b><%= candidate.first_name + " " + candidate.last_name  %></b></a>
                  <span class="float-right ml-2">Time<b class="ml-2"><i class="fa fa-clock mr-1"></i>
                  <%= Time.strptime(interview_schedule.time, '%H:%M %m/%d/%Y').strftime('%-l.%M %P') %></b></span>
                  <span class="float-right ml-2">Date<b class="ml-2"><i class="fa fa-calendar mr-1"></i><%=  Time.strptime(interview_schedule.time, '%H:%M %m/%d/%Y').strftime('%-d %B %Y')%></b></span></p> <hr>     
                  <p>Scheduled by:- <b class="ml-2"><%= @notification.user.name %></b>
                </p>
            </div>

        </div>

        <div class="text-right">
            <a href="/notifications" class="text-success"><i class="fa fa-long-arrow-left"></i> Back </a>
        </div>

    </div>