<% candidate = Candidate.find(@notification.candidate_id)%>

    <div class="container">

        <div class="p-3">

            <div class="alert alert-info">
                <p>
                   <i class="fa fa-file mr-1"></i>Interview has been scheduled for <a href="<%= candidate_path(candidate)%>"><b><%= candidate.first_name + " " + candidate.last_name  %></b></a><span class="float-right ml-2">Time and Date<b class="ml-2"><i class="fa fa-clock mr-1"></i><%=  @notification.lead.interview_schedule.time %></b></span><hr> 
                   <% notification = @notification.user.name.present? ? @notification.user.name : nil %>
                   <p>by:- <b class="ml-2"><%= notification %></b></p>
                   <% lead = @notification.lead.present? ? @notification.lead.name : nil %>
                   <p>Lead:- <b class="ml-2"><%= lead %></b>
                </p>
            </div>

        </div>

        <div class="text-right">
            <a href="/notifications" class="text-success"><i class="fa fa-long-arrow-left"></i> Back </a>
        </div>

    </div>